<?xml version="1.0"?>
<launch>
  <!-- Gazebo world to load -->
  <arg name="world" default="$(find vrx_gazebo)/worlds/sydneyregatta.world" />
  <!-- If true, run gazebo GUI -->
  <arg name="gui" default="true" />
  <!-- If true, run gazebo in verbose mode -->
  <arg name="verbose" default="false"/>
  <!-- If true, start in paused state -->
  <arg name="paused"  default="true"/>
  <!-- Start in a default namespace -->
  <arg name="namespace" default="sandwich_0"/>
  <!-- Set robot name for group model -->
  <arg name="robot_name" default="sandwich_0"/>
  <!-- Lock robot in place on start -->
  <arg name="robot_locked" default="false" />
  <!-- Control robot with joystick -->
  <arg name="joy" default="true"/>
  

  <!-- Start Gazebo with the world file -->
  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name"   value="$(arg world)"/>
    <arg name="verbose"      value="$(arg verbose)"/>
    <arg name="paused"       value="$(arg paused)"/>
    <arg name="use_sim_time" value="true"/>
    <arg name="gui"          value="$(arg gui)" />
  </include>

 <group ns="robot0">
    <include file="$(find optical_swarm)/launch/sandwich_multi.launch">
      <arg name="x" value="-840"/>
      <arg name="y" value="-485"/>
      <arg name="z" value="0"/>
      <arg name="P" value="0"/>
      <arg name="R" value="0"/>
      <arg name="Y" value="0"/>
      <arg name="robot_locked" value="false"/>
      <arg name="namespace" value="sandwich_0"/>
      <arg name="robot_name" value="sandwich_0"/>
      <arg name="front_ID" value="00"/>
      <arg name="back_ID" value="01"/>
      <arg name="left_ID" value="02"/>
      <arg name="right_ID" value="03"/>
     </include>
     <node pkg="robot_state_publisher" type="robot_state_publisher"
	  name="robot_state_publisher" > 
	  <remap from="robot_description" to="/robot0/sandwich_0/robot_description" />     
     </node>
          
          <node pkg="usv_control" type="usv_control_sandwich.py"
  name="usv_control_sandwich" output="screen">
    <!-- Set initial control gains -->
    <!-- Yaw Rate -->
    <param name="yawKp" value="20"/>
    <param name="yawKi" value="5.0"/>
    <param name="yawKd" value="1"/>

    <!-- Use remap to connect generic controller to specific use-case -->
    <remap from="cmd_vel" to="/sandwich_0/cmd_vel"/>
    <remap from="imu/data" to="/robot0/sandwich_0/sensors/imu/imu/data"/>
    <remap from="left_thrust_cmd"
	   to="/sandwich_0/thrusters/left_thrust_cmd"/>
    <remap from="right_thrust_cmd"
	   to="/sandwich_0/thrusters/right_thrust_cmd"/>
    <remap from="yaw_pid_debug" to="sandwich_0/control/yaw_pid_debug"/>
    
  </node>
  
  </group>

<group ns="robot1">
    <include file="$(find optical_swarm)/launch/sandwich_multi.launch">
      <arg name="x" value="-820"/>
      <arg name="y" value="-500"/>
      <arg name="z" value="0"/>
      <arg name="P" value="0"/>
      <arg name="R" value="0"/>
      <arg name="Y" value="0"/>
      <arg name="robot_locked" value="false"/>
      <arg name="namespace" value="sandwich_1"/>
      <arg name="robot_name" value="sandwich_1"/>
      <arg name="front_ID" value="10"/>
      <arg name="back_ID" value="11"/>
      <arg name="left_ID" value="12"/>
      <arg name="right_ID" value="13"/>

    </include>
    <node pkg="robot_state_publisher" type="robot_state_publisher"
	  name="robot_state_publisher" >
	  <remap from="robot_description" to="/robot1/sandwich_1/robot_description" />
    </node>
    
     <node pkg="usv_control" type="usv_control_sandwich.py"
  name="usv_control_sandwich" output="screen">
    <!-- Set initial control gains -->
    <!-- Yaw Rate -->
    <param name="yawKp" value="20"/>
    <param name="yawKi" value="5.0"/>
    <param name="yawKd" value="1"/>

    <!-- Use remap to connect generic controller to specific use-case -->
    <remap from="cmd_vel" to="/sandwich_1/cmd_vel"/>
    <remap from="imu/data" to="/robot1/sandwich_1/sensors/imu/imu/data"/>
    <remap from="left_thrust_cmd"
	   to="/sandwich_1/thrusters/left_thrust_cmd"/>
    <remap from="right_thrust_cmd"
	   to="/sandwich_1/thrusters/right_thrust_cmd"/>
    <remap from="yaw_pid_debug" to="sandwich_1/control/yaw_pid_debug"/>
    
  </node>
  
  </group>
  
  <group ns="robot2">
    <include file="$(find optical_swarm)/launch/sandwich_multi.launch">
      <arg name="x" value="-840"/>
      <arg name="y" value="-515"/>
      <arg name="z" value="0"/>
      <arg name="P" value="0"/>
      <arg name="R" value="0"/>
      <arg name="Y" value="0"/>
      <arg name="robot_locked" value="false"/>
      <arg name="namespace" value="sandwich_2"/>
      <arg name="robot_name" value="sandwich_2"/>
      <arg name="front_ID" value="20"/>
      <arg name="back_ID" value="21"/>
      <arg name="left_ID" value="22"/>
      <arg name="right_ID" value="23"/>

    </include>
    <node pkg="robot_state_publisher" type="robot_state_publisher"
	  name="robot_state_publisher" >
	  <remap from="robot_description" to="/robot2/sandwich_2/robot_description" />
    </node>
    
  
  
     <node pkg="usv_control" type="usv_control_sandwich.py"
  name="usv_control_sandwich" output="screen">
    
    <param name="yawKp" value="20"/>
    <param name="yawKi" value="5.0"/>
    <param name="yawKd" value="1"/>

    
    <remap from="cmd_vel" to="/sandwich_2/cmd_vel"/>
    <remap from="imu/data" to="/robot2/sandwich_2/sensors/imu/imu/data"/>
    <remap from="left_thrust_cmd"
	   to="/sandwich_2/thrusters/left_thrust_cmd"/>
    <remap from="right_thrust_cmd"
	   to="/sandwich_2/thrusters/right_thrust_cmd"/>
    <remap from="yaw_pid_debug" to="sandwich_2/control/yaw_pid_debug"/>
    
  </node>
  
  </group>
  
    <group if="$(arg joy)">
    <include file="$(find vrx_gazebo)/launch/usv_joydrive.launch">
      <arg name="namespace" value="sandwich_2"/>
    </include>
  </group>
  
 <include file="$(find optical_swarm)/launch/detection_trial.launch">
  </include>
  
  <include file="$(find optical_swarm)/launch/detection_trial.launch">
    <arg name="robot_name"   value="/robot1/sandwich_1"/>
  </include>
  
  <include file="$(find optical_swarm)/launch/detection_trial.launch">
    <arg name="robot_name"   value="/robot2/sandwich_2"/>
  </include>   
  
        <!-- Rabbit Visualization:Spawn a visual model to serve as marker -->
  <group ns="april_cube">     
  <param name="april_description" 
         command="$(find xacro)/xacro --inorder $(find optical_swarm)/urdf/april_cube_demo.xacro" />
     
        
  <node name="spawn_rabbit" pkg="gazebo_ros" type="spawn_model"
        args="-urdf -param april_description -x -800 -y -500 -z 1 -R 0 -P 0 -Y 0 -model april_cube"/>
              
              <!-- Convert PointStamped messages to model states -->
  <node name="pointstamped2modelstate" pkg="optical_swarm"
	type="pointstamped2modelstate.py" output="screen">
    <param name="model_name" value="april_cube"/>
    <param name="reference_frame" value="world"/>
  </node>
  
  <node pkg="optical_swarm" type="rabbit.py" name="april_cube">
    <param name="update_rate" type="double" value="10"/>
    <param name="velocity" type="double" value="5"/>
    <rosparam file="$(find optical_swarm)/config/rabbit_waypoints_speed_test.yaml" />
    
  </node>  
  <node pkg="robot_state_publisher" type="robot_state_publisher"
	  name="robot_state_publisher" >
	  <remap from="robot_description" to="april_description" />
    </node>
  </group>
  



          
</launch>


